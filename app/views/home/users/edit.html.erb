<h1>Edition du profil</h1>

<%= form_for @user, url: {action: "update"} do |f| %>
    <% if @user.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@user.errors.count, "error") %> empêche l'enregistrement de l'utilisateur:</h2>

          <ul>
            <% @user.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
    <% end %>
    <div class="field">
      <%= f.label :nom, "Nom" %><br />
      <%= f.text_field :nom %>
    </div>
    <div class="field">
      <%= f.label :prenom, "Prénom" %><br />
      <%= f.text_field :prenom %>
    </div>
    <div class="field">
      <%= f.label :dateNaissance, "Date de naissance" %><br />
      <%= f.text_field :dateNaissance %>
    </div>
    <div class="field">
      <%= f.label :email, "eMail" %><br />
      <%= f.text_field :email %>
    </div>
    <div class="field">
      <%= f.label :password, "Mot de passe" %><br />
      <%= f.password_field :password %>
    </div>
    <div class="field">
      <%= f.label :password_confirmation, "Confirmation mot de passe" %><br />
      <%= f.password_field :password_confirmation %>
    </div>
    <div class="actions">
      <%= f.submit "Update" %>
    </div>
<% end %>
