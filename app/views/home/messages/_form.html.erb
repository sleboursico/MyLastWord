
<%= simple_form_for [:home, @message] do |f| %>

    <% if @message.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@message.errors.count, "error") %> prohibited this home_message from being saved:</h2>

          <ul>
            <% @message.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
    <% end %>


    <%= f.input :titre %>
    <%= f.input :contenu %>
    <%= f.association :contacts,collection: current_user.contacts, label_method: :getNomCompletEtAdresse,value_method: :id, as: :check_boxes %>

    <div class="actions">
    <%= f.button :submit %>
    </div>
<% end %>