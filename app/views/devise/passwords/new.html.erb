<%= stylesheet_link_tag "sign-in", :media => "all" %>


<%= simple_form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }) do |f| %>
    <div id="sign_in1">

      <%= f.error_notification %>
      <div class="container">
        <div class="row">
          <div class="span12 header">
            <h4><%= t('site.public.forget.title') %></h4>
            <p>
              <%= t('site.public.forget.intro') %></p>

          </div>



          <div class="span12 footer">
            <form>
              <%= f.input :email, :required => false, :autofocus => true, :placeholder => t('site.public.signin.email'), label: false,:wrapper => false, :wrapper => false   %>

              <%= f.submit t('site.public.forget.submit'), :placeholder => t('site.public.forget.submit') %>
            </form>
          </div>


        </div>
      </div>
    </div>


<% end %>
